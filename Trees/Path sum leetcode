/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    public boolean hasPathSum(TreeNode root, int sum) {
        if(root==null)return false;
        boolean res=find(root,sum,0);
        return res;
    }
     static boolean find(TreeNode node ,int s,int cs){
        if (node==null)return false;
        if (node.left==null&&node.right==null&&cs+node.val==s)return true;
        return find(node.left,s,cs+node.val)||find(node.right,s,cs+node.val);
    }
}
